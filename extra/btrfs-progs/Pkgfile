# Depends on: lzo asciidoc xmlto

name=btrfs-progs
version=5.3.1
release=1
source=(https://www.kernel.org/pub/linux/kernel/people/kdave/btrfs-progs/$name-v$version.tar.xz)

build() {
	cd $name-v$version

	./configure --prefix=/usr  \
            --bindir=/bin  \
            --libdir=/lib  \
            --disable-zstd
	make
	make DESTDIR=$PKG install

	mkdir -p $PKG/usr/lib $PKG/sbin
	ln -sfv ../../lib/$(readlink $PKG/lib/libbtrfs.so) $PKG/usr/lib/libbtrfs.so
	ln -sfv ../../lib/$(readlink $PKG/lib/libbtrfsutil.so) $PKG/usr/lib/libbtrfsutil.so
	rm -fv $PKG/lib/libbtrfs.{a,so} $PKG/lib/libbtrfsutil.{a,so}
	mv -v /bin/{mkfs,fsck}.btrfs $PKG/sbin
}
