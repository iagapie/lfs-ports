# Description:
# URL:
# Maintainer:
# Depends on: json-glib libsoup modemmanager avahi

name=geoclue
version=2.5.5
release=1
source=( https://gitlab.freedesktop.org/$name/$name/-/archive/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr --sysconfdir=/etc -Dgtk-doc=false -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
