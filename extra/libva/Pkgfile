# Description:
# URL:
# Maintainer:
# Depends on: mesa libdrm

name=libva
version=2.5.0
release=1
source=(https://github.com/01org/libva/releases/download/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
