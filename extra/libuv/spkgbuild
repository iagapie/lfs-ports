# description	: libuv
# maintainer	: iagapie, igoragapie at gmail.com
# depends	    : xorg-libraries

name=libuv
version=1.34.1
release=1
source="https://dist.libuv.org/dist/v$version/libuv-v$version.tar.gz"

build() {
	cd $name-$version

	sh autogen.sh
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
