# Description:
# URL:
# Maintainer:
# Depends on: glib gobject-introspection

name=gstreamer
version=1.16.1
release=1
source=(http://gstreamer.freedesktop.org/src/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		    --libexecdir=/usr/lib \
		    --disable-nls \
        	    --with-package-name="GStreamer $version (Venom)"
	make
	make DESTDIR=$PKG install
}
