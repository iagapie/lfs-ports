# Description:
# URL:
# Maintainer:
# Depends on: sgml-common unzip

name=docbook
version=3.1
release=1
source=(http://www.docbook.org/sgml/$version/docbk31.zip)

build() {
	sed -i -e '/ISO 8879/d' \
       -e 's|DTDDECL "-//OASIS//DTD DocBook V$version//EN"|SGMLDECL|g' \
       docbook.cat
	
	install -v -d -m755 $PKG/usr/share/sgml/docbook/sgml-dtd-$version
	chown -R root:root .
	install -v docbook.cat $PKG/usr/share/sgml/docbook/sgml-dtd-$version/catalog
	cp -v -af *.dtd *.mod *.dcl $PKG/usr/share/sgml/docbook/sgml-dtd-$version
	
	cat >> $PKG/usr/share/sgml/docbook/sgml-dtd-$version/catalog << "EOF"
  -- Begin Single Major Version catalog changes --

PUBLIC "-//Davenport//DTD DocBook V3.0//EN" "docbook.dtd"

  -- End Single Major Version catalog changes --
EOF
}
