# Description:
# URL:
# Maintainer:
# Depends on:

name=ruby
version=2.6.5
release=1
source=(https://cache.ruby-lang.org/pub/$name/${version::3}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr   \
        	    --enable-shared
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc
}
