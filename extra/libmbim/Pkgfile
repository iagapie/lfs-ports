# Description:
# URL:
# Maintainer:
# Depends on: libgudev

name=libmbim
version=1.20.2
release=1
source=(https://www.freedesktop.org/software/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/$name \
		--disable-static
	make
	make DESTDIR=$PKG install
}
