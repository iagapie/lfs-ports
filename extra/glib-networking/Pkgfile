# Description:
# URL:
# Maintainer:
# Depends on: glib gnutls gsettings-desktop-schemas make-ca p11-kit meson

name=glib-networking
version=2.62.1
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr            \
	      -Dlibproxy_support=false \
	      -Dpkcs11_support=true
	ninja
	DESTDIR=$PKG ninja install

	rm -r $PKG/usr/share
}
