name=xmlto
version=0.0.28
release=1
source=(https://releases.pagure.org/xmlto/xmlto-$version.tar.bz2)

build() {
	cd $name-$version

	LINKS="/usr/bin/links" \
	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
