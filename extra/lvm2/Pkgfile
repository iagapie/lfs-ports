# Description:
# URL:
# Maintainer:
# Depends on: libaio

name=lvm2
version=2.03.06
release=1
source=(https://sourceware.org/ftp/lvm2/LVM2.$version.tgz)

build() {
	cd LVM2.${version}

	SAVEPATH=$PATH
	PATH=$PATH:/sbin:/usr/sbin
	./configure --prefix=/usr       \
				--exec-prefix=      \
				--enable-cmdlib     \
				--enable-pkgconfig  \
				--enable-udev_sync
	make
	PATH=$SAVEPATH
	unset SAVEPATH
	make DESTDIR=$PKG install
}
