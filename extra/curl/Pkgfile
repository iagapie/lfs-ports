# Depends on:

name=curl
version=7.66.0
release=1
source=(https://curl.haxx.se/download/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr                           \
            --disable-static                        \
            --enable-threaded-resolver              \
            --with-ca-path=/etc/ssl/certs
	make
	make DESTDIR=$PKG install
}
