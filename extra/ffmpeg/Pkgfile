# Description:
# URL:
# Maintainer:
# Depends on: nasm gnutls libass fdk-aac lame opus libtheora libvorbis libvpx x264 x265

name=ffmpeg
version=4.2.1
release=1
source=(http://ffmpeg.org/releases/$name-$version.tar.xz)

build() {
	cd $name-$version

	# adds the ALSA library to the Flite LDFLAGS variable and
	# enables the discovery of Flite
	sed -i 's/-lflite"/-lflite -lasound"/' configure

	./configure --prefix=/usr        \
	            --enable-gpl         \
		    --enable-gnutls      \
	            --enable-version3    \
	            --enable-nonfree     \
	            --disable-static     \
	            --enable-shared      \
	            --disable-debug      \
	            --enable-libass      \
	            --enable-libfdk-aac  \
	            --enable-libfreetype \
	            --enable-libmp3lame  \
	            --enable-libopus     \
	            --enable-libtheora   \
	            --enable-libvorbis   \
	            --enable-libvpx      \
	            --enable-libx264     \
	            --enable-libx265
	make
	gcc tools/qt-faststart.c -o tools/qt-faststart
	make DESTDIR=$PKG install

	install -m755 tools/qt-faststart $PKG/usr/bin
}
