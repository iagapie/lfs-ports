# Description:
# URL:
# Maintainer:
# Depends on: libxslt

name=glib
version=2.62.2
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version::4}/$name-$version.tar.xz
		glib-2.62.2-skip_warnings-1.patch)

build() {
	cd $name-$version

	patch -Np1 -i ../$name-$version-skip_warnings-1.patch

	mkdir build-glib
	cd    build-glib
	
	meson --prefix=/usr   \
	      -Dman=false      \
	      -Dselinux=disabled \
	      ..
	ninja
	DESTDIR=$PKG ninja install
}
