# Description:
# URL:
# Maintainer:
# Depends on: jasper lcms2 libjpeg-turbo

name=libraw
version=0.19.5
release=1
source=(https://www.libraw.org/data/LibRaw-$version.tar.gz)

build() {
	cd LibRaw-$version

	./configure --prefix=/usr    \
	            --enable-jpeg    \
	            --enable-jasper  \
	            --enable-lcms    \
	            --disable-static
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
