# Description:
# URL:
# Maintainer:
# Depends on: libogg libvorbis

name=libtheora
version=1.1.1
release=1
source=(https://downloads.xiph.org/releases/theora/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i 's/png_\(sizeof\)/\1/g' examples/png2theora.c

	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
