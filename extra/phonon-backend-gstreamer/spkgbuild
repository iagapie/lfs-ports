# description	: phonon-backend-gstreamer
# maintainer	: iagapie, igoragapie at gmail.com
# depends	    : gstreamer libxml2 phonon gst-plugins-base extra-cmake-modules

name=phonon-backend-gstreamer
version=4.10.0
release=1
source="https://download.kde.org/stable/phonon/phonon-backend-gstreamer/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr    \
	      -DCMAKE_BUILD_TYPE=Release     \
	      ..
	make
	make DESTDIR=$PKG install
}
