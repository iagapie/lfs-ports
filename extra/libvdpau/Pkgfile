# Description:
# URL:
# Maintainer:
# Depends on: meson

name=libvdpau
version=1.3
release=1
source=(https://gitlab.freedesktop.org/vdpau/libvdpau/-/archive/$version/libvdpau-$version.tar.bz2)

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install
}
