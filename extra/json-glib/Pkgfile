# Description:
# URL:
# Maintainer:
# Depends on: glib gobject-introspection

name=json-glib
version=1.4.4
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version::3}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix /usr --libexecdir=/usr/lib/$name ..
	ninja
	DESTDIR=$PKG ninja install
}
