# Description:
# URL:
# Maintainer:
# Depends on: qt5 nss dbus-glib libgudev libndp libnl consolekit2 dhcpcd libsoup newt polkit upower wpa_supplicant gobject-introspection iptables vala docbook-xsl python3-gobject3 libxslt

name=networkmanager
version=1.20.6
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/NetworkManager/${version%.*}/NetworkManager-$version.tar.xz)

build() {
	cd NetworkManager-$version

	sed -e '/Qt[CDN]/s/Qt/Qt5/g'       \
		-e 's/-qt4/-qt5/'              \
		-e 's/moc_location/host_bins/' \
		-i examples/C/qt/meson.build
	
	sed '/initrd/d' -i src/meson.build

	grep -rl '^#!.*python$' | xargs sed -i '1s/python/&3/'

	mkdir build
	cd    build

	CXXFLAGS+="-O2 -fPIC"            \
	meson --prefix /usr              \
		--sysconfdir /etc          \
		--localstatedir /var       \
		-Djson_validation=false    \
		-Dlibaudit=no              \
		-Dlibpsl=false             \
		-Dnmtui=true               \
		-Dovs=false                \
		-Dppp=false                \
		-Dselinux=false            \
		-Dqt=false                 \
		-Dudev_dir=/lib/udev       \
		-Dsession_tracking=systemd \
		-Dmodem_manager=false      \
		-Dsystemdsystemunitdir=/lib/systemd/system \
		..
	ninja
	DESTDIR=$PKG ninja install

	rm -r $PKG/usr/share/{doc,locale}

	mkdir -p $PKG/etc/NetworkManager/conf.d $PKG/usr/share/polkit-1/rules.d

	cat > $PKG/etc/NetworkManager/conf.d/polkit.conf << "EOF"
[main]
auth-polkit=true
EOF

	cat > $PKG/etc/NetworkManager/conf.d/dhcp.conf << "EOF"
[main]
dhcp=dhcpcd
EOF

	cat > $PKG/etc/NetworkManager/conf.d/no-dns-update.conf << "EOF"
[main]
dns=none
EOF

	cat > $PKG/usr/share/polkit-1/rules.d/org.freedesktop.NetworkManager.rules << "EOF"
polkit.addRule(function(action, subject) {
    if (action.id.indexOf("org.freedesktop.NetworkManager.") == 0 && subject.isInGroup("netdev")) {
        return polkit.Result.YES;
    }
});
EOF
}
