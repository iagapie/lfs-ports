# Description:
# URL:
# Maintainer:
# Depends on: cmake

name=openjpeg
version=2.3.1
release=1
source=(https://github.com/uclouvain/$name/archive/v$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	mkdir -v build
	cd       build

	cmake -DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_STATIC_LIBS=OFF ..
	make
	make DESTDIR=$PKG install
}
