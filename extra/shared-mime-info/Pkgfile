name=shared-mime-info
version=1.15
release=1
source=(https://gitlab.freedesktop.org/xdg/$name/uploads/b27eb88e4155d8fccb8bb3cd12025d5b/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
