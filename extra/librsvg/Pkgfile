# Description:
# URL:
# Maintainer:
# Depends on: gdk-pixbuf libcroco pango gtk3 gobject-introspection vala rust

name=librsvg
version=2.46.3
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr    \
	            --enable-vala    \
	            --disable-static \
		    --disable-nls
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/{gtk-,}doc
}
