# Description:
# URL:
# Maintainer:
# Depends on: dbus-glib libxslt vala gobject-introspection

name=telepathy-glib
version=0.24.1
release=1
source=(https://telepathy.freedesktop.org/releases/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr          \
            --enable-vala-bindings \
            --disable-static
	make
	make DESTDIR=$PKG install
}
