# Description:
# URL:
# Maintainer:
# Depends on: libogg

name=libvorbis
version=1.3.6
release=1
source=(https://downloads.xiph.org/releases/vorbis/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc
}
