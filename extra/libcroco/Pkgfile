# Depends on: glib libxml2

name=libcroco
version=0.6.13
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
