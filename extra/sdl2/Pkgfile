# Description:
# URL:
# Maintainer:
# Depends on:

name=sdl2
version=2.0.10
release=1
source=(http://www.libsdl.org/release/SDL2-$version.tar.gz
		SDL2-2.0.10-opengl_include_fix-1.patch)

build() {
	cd SDL2-$version

	case $(uname -m) in
   		i?86) patch -Np1 -i ../SDL2-$version-opengl_include_fix-1.patch ;;
	esac

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -v $PKG/usr/lib/libSDL2*.a
}
