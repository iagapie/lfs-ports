# Description:
# URL:
# Maintainer:
# Depends on: ffmpeg gstreamer gst-plugins-base libva sbc sdl2 alsa-lib

name=pipewire
version=0.2.7
release=1
source=(https://github.com/PipeWire/pipewire/archive/$version.tar.gz)

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr --sysconfdir=/etc -Ddocs=false ..
	ninja
	DESTDIR=$PKG ninja install
}
