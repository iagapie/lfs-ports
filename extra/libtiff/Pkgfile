# Description:
# URL:
# Maintainer:
# Depends on:

name=libtiff
version=4.1.0
release=1
source=(http://download.osgeo.org/$name/tiff-$version.tar.gz)

build() {
	cd tiff-$version

	mkdir -p build
	cd build
	
	cmake -DCMAKE_INSTALL_DOCDIR=/usr/share/doc/libtiff \
	      -DCMAKE_INSTALL_PREFIX=/usr -G Ninja ..
	ninja
	DESTDIR=$PKG ninja install
}
