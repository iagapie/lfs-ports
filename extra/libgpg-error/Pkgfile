# Depends on:

name=libgpg-error
version=1.36
release=1
source=(https://www.gnupg.org/ftp/gcrypt/libgpg-error/libgpg-error-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i 's/namespace/pkg_&/' src/Makefile.{am,in} src/mkstrtable.awk
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
