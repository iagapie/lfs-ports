# Description:
# URL:
# Maintainer:
# Depends on: libxml2

name=libxslt
version=1.1.34
release=1
source=(http://xmlsoft.org/sources/$name-$version.tar.gz)

build() {
	cd $name-$version

	sed -i s/3000/5000/ libxslt/transform.c doc/xsltproc.{1,xml}
	
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
