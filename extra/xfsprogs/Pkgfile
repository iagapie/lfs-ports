# Description:
# URL:
# Maintainer:
# Depends on:

name=xfsprogs
version=5.2.1
release=1
source=( https://www.kernel.org/pub/linux/utils/fs/xfs/xfsprogs/xfsprogs-$version.tar.xz)

build() {
	cd $name-$version

	make DEBUG=-DNDEBUG     \
		INSTALL_USER=root  \
		INSTALL_GROUP=root \
		LOCAL_CONFIGURE_OPTIONS="--enable-readline"
	
	make DESTDIR=$PKG install
	make DESTDIR=$PKG install-dev

	rm -rfv $PKG/usr/lib/libhandle.a
	rm -rfv $PKG/lib/libhandle.{a,la,so}
	ln -sfv ../../lib/libhandle.so.1 $PKG/usr/lib/libhandle.so
	sed -i "s@libdir='/lib@libdir='/usr/lib@" $PKG/usr/lib/libhandle.la
}
