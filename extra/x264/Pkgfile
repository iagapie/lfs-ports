name=x264
version=20191030.2245
release=1
source=(http://download.videolan.org/pub/videolan/$name/snapshots/$name-snapshot-${version/./-}-stable.tar.bz2)

build() {
	cd $name-snapshot-${version/./-}-stable

	./configure --prefix=/usr \
	            --enable-shared \
	            --disable-cli
	make
	make DESTDIR=$PKG install
}
