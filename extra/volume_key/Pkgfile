# Description:
# URL:
# Maintainer:
# Depends on: cryptsetup glib gpgme nss swig

name=volume_key
version=0.3.12
release=1
source=(https://github.com/felixonmars/volume_key/archive/volume_key-$version.tar.gz)

build() {
	cd $name-$version

	autoreconf -fiv
	./configure --prefix=/usr    \
				--without-python
	make
	make DESTDIR=$PKG install
}
