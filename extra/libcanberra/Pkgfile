# Description:
# URL:
# Maintainer:
# Depends on: libvorbis alsa-lib gstreamer gtk3

name=libcanberra
version=0.30
release=1
source=(http://0pointer.de/lennart/projects/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-oss
	make
	make -j1 DESTDIR=$PKG install

	rm -r $PKG/usr/share/{gtk-,}doc
}
