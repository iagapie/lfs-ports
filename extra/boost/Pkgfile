# Description:
# URL:
# Maintainer:
# Depends on: which

name=boost
version=1_71_0
release=1
source=(https://dl.bintray.com/boostorg/release/1.71.0/source/boost_$version.tar.bz2)

build() {
	cd ${name}_${version}

	./bootstrap.sh --prefix=$PKG/usr
	./b2 stage -j$(nproc) threading=multi link=shared
	./b2 install threading=multi link=shared
	ln -svf detail/sha1.hpp $PKG/usr/include/boost/uuid/sha1.hpp
}
