name=libass
version=0.14.0
release=1
source=(https://github.com/$name/$name/releases/download/$version/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
