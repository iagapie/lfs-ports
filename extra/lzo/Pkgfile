name=lzo
version=2.10
release=1
source=(http://www.oberhumer.com/opensource/lzo/download/lzo-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr                    \
            --enable-shared                  \
            --disable-static
	make
	make DESTDIR=$PKG install
}
