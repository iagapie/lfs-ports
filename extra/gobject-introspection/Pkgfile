# Description:
# URL:
# Maintainer:
# Depends on: glib pango atk hicolor-icon-theme

name=gobject-introspection
version=1.62.0
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr 
	ninja
	DESTDIR=$PKG ninja install
}
