# Description:
# URL:
# Maintainer:
# Depends on: json-glib libsoup gobject-introspection

name=geocode-glib
version=3.26.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/3.26/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build
	meson --prefix /usr -Denable-gtk-doc=false -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
