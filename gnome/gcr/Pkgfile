# Description:
# URL:
# Maintainer:
# Depends on: glib p11-kit libtasn1 libgcrypt

name=gcr
version=3.34.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/gcr/3.34/gcr-$version.tar.xz)

build() {
	cd $name-$version

	sed -i -r 's:"(/desktop):"/org/gnome\1:' schema/*.xml

	./configure --prefix=/usr     \
				--sysconfdir=/etc
	make
	make DESTDIR=$PKG install
}
