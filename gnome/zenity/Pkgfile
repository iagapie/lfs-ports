# Description:
# URL:
# Maintainer:
# Depends on: gtk3 itstool

name=zenity
version=3.32.0
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/zenity/${version%.*}/zenity-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
	make
	make DESTDIR=$PKG install
}
