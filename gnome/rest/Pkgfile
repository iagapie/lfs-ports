# Description:
# URL:
# Maintainer:
# Depends on: make-ca libsoup gobject-introspection

name=rest
version=0.8.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/rest/0.8/rest-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
    	--with-ca-certificates=/etc/pki/tls/certs/ca-bundle.crt
	make
	make DESTDIR=$PKG install
}
