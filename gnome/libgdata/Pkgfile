# Description:
# URL:
# Maintainer:
# Depends on: liboauth libsoup gnome-online-accounts gtk3 json-glib uhttpmock vala gcr git gobject-introspection 

name=libgdata
version=0.17.11
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/libgdata/0.17/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr -Dgtk_doc=false -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
