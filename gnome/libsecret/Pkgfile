# Description:
# URL:
# Maintainer:
# Depends on: glib libgcrypt vala gobject-introspection

name=libsecret
version=0.19.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/libsecret/0.19/libsecret-.tar.xz)

build() {
	cd $name-$version

	sed '/valgrind/d' -i egg/egg-testing.c

	mkdir bld &&
	cd bld

	meson --prefix=/usr -Dgtk_doc=false -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
