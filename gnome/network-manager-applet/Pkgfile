# Description:
# URL:
# Maintainer:
# Depends on: gcr gtk3 iso-codes libsecret libnotify networkmanager gobject-introspection modemmanager polkit-gnome

name=network-manager-applet
version=1.8.24
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/1.8/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr     \
		--sysconfdir=/etc \
		-Dselinux=false   \
		-Dteam=false      \
		-Dmobile_broadband_provider_info=false \
		-Dgtk_doc=false ..
	ninja
	DESTDIR=$PKG ninja install
}
