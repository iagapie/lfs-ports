# Description:
# URL:
# Maintainer:
# Depends on: gsettings-desktop-schemas gtk3 iso-codes itstool libseccomp libxml2 xkeyboard-config bubblewrap gobject-introspection

name=gnome-desktop
version=3.34.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/3.34/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build &&
	cd build &&

	meson --prefix=/usr -Dgnome_distributor="LFS" -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
