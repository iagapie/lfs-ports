# Maintainer:
# Depends on: colord fontconfig geoclue geocode-glib gnome-desktop lcms2 libcanberra libgweather libnotify librsvg libwacom pulseaudio systemd upower xf86-input-wacom nss gcr

name=gnome-settings-daemon
version=3.34.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/3.34/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr --sysconfdir=/etc -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
