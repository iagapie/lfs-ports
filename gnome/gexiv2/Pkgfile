# Description:
# URL:
# Maintainer:
# Depends on: exiv2 vala

name=gexiv2
version=0.12.0
release=1
source=(https://download.gnome.org/sources/gexiv2/0.12/gexiv2-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr -Dman=false ..
	ninja
	DESTDIR=$PKG ninja install
}
