# Depends on: gconf gtk2 gtk3 kf5-frameworks libpwquality libxkbcommon mesa wayland networkmanager pipewire pulseaudio qca sassc taglib xcb-util-cursor polkit-kde-agent-1 libcanberra libxkbfile kmenuedit systemsettings ksysguard kpeople baloo qt5 kactivities-stats extra-cmake-modules kdoctools boost xf86-input-evdev xf86-input-synaptics xorg-server python3 kdesignerplugin

name=plasma-desktop
version=5.17.3
release=1
source=(http://download.kde.org/stable/plasma/5.17.3/plasma-desktop-$version.tar.xz)

build() {
	cd plasma-desktop-$version
    
    sed -i '/X11.h)/i set(X11_FOUND 1)' CMakeLists.txt

    mkdir build
    cd    build

    cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF -Wno-dev ..
    make
	make DESTDIR=$PKG install
}
