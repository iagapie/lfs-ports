# Depends on: exiv2 lcms2 kactivities baloo libkdcraw kparts kitemmodels extra-cmake-modules kdoctools python3

name=gwenview
version=19.08.3
release=1
source=(https://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr	 \
	      -DCMAKE_BUILD_TYPE=Release         \
	      -DBUILD_TESTING=OFF                \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/doc
	rm -r $PKG/usr/share/locale
}
