# Depends on: boost extra-cmake-modules docbook-xml docbook-xsl giflib libepoxy libgcrypt libjpeg-turbo libpng libxslt lmdb phonon shared-mime-info uri

name=qqc2-desktop-style
version=5.64.0
release=1
source=(http://download.kde.org/stable/frameworks/5.64/qqc2-desktop-style-$version.tar.xz)

build() {
	cd qqc2-desktop-style-$version

    mkdir build
    cd    build

    cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_PREFIX_PATH=/usr -DCMAKE_BUILD_TYPE=Release -DBUILD_TESTING=OFF -Wno-dev ..
    make
	make DESTDIR=$PKG install
}
