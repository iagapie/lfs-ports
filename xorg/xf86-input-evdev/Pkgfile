# Description:
# URL:
# Maintainer:
# Depends on: libevdev mtdev xorg-server

name=xf86-input-evdev
version=2.10.6
release=1
source=(ftp://ftp.x.org/pub/individual/driver/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
