# Description:
# URL:
# Maintainer:
# Depends on: encodings font-alias fontconfig

name=font-adobe-utopia-type1
version=1.0.4
release=1
source=(https://www.x.org/pub/individual/font/font-adobe-utopia-type1-$version.tar.bz2)

build() {
	cd font-adobe-utopia-type1-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install

    find $PKG -name 'fonts.scale' -delete
	find $PKG -name 'fonts.dir' -delete
}
