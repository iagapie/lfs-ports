# Description:
# URL:
# Maintainer:
# Depends on: libxau xcb-proto

name=libxcb
version=1.13.1
release=1
source=(https://xcb.freedesktop.org/dist/$name-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i "s/pthread-stubs//" configure

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-doxygen \
    	--docdir='${datadir}'/doc/libxcb
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/doc
}
