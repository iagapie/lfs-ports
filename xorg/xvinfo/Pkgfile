# Depends on: libx11 libxv util-macros

name=xvinfo
version=1.1.4
release=1
source=(ftp://ftp.x.org/pub/individual/app/xvinfo-$version.tar.bz2)

build() {
	cd xvinfo-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
