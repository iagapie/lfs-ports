# Description:
# URL:
# Maintainer:
# Depends on: xorg-server

name=twm
version=1.0.10
release=1
source=(ftp://ftp.x.org/pub/individual/app/twm-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i -e '/^rcdir =/s,^\(rcdir = \).*,\1/etc/X11/app-defaults,' src/Makefile.in
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
