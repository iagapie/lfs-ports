# Depends on: fontconfig libxcb libxv 

name=libxvmc
version=1.0.12
release=1
source=(ftp://ftp.x.org/pub/individual/lib/libXvMC-$version.tar.bz2)

build() {
	cd libXvMC-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
