name=sessreg
version=1.1.2
release=1
source=(ftp://ftp.x.org/pub/individual/app/sessreg-$version.tar.bz2)

build() {
	cd sessreg-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
