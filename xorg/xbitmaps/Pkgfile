# Description:
# URL:
# Maintainer:
# Depends on: util-macros

name=xbitmaps
version=1.1.2
release=1
source=(ftp://ftp.x.org/pub/individual/data/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make DESTDIR=$PKG install
}
