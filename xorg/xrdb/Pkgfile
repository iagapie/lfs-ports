# Depends on: libx11 libxmu util-macros

name=xrdb
version=1.2.0
release=1
source=(ftp://ftp.x.org/pub/individual/app/xrdb-$version.tar.bz2)

build() {
	cd xrdb-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
