# Description:
# URL:
# Maintainer:
# Depends on:

name=nettle
version=3.5.1
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		    --disable-static
	make
	make DESTDIR=$PKG install

	chmod   -v   755 $PKG/usr/lib/lib{hogweed,nettle}.so

	rm -r $PKG/usr/share
}
