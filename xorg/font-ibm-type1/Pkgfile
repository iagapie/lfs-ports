name=font-ibm-type1
version=1.0.3
release=1
source=(ftp://ftp.x.org/pub/individual/lib/font-ibm-type1-$version.tar.bz2)

build() {
	cd font-ibm-type1-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
