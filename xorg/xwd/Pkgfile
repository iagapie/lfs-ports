name=xwd
version=1.0.7
release=1
source=(ftp://ftp.x.org/pub/individual/app/xwd-$version.tar.bz2)

build() {
	cd xwd-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
