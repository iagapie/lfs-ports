# Depends on: xorgproto libxext util-macros

name=libdmx
version=1.1.4
release=1
source=(ftp://ftp.x.org/pub/individual/lib/libdmx-$version.tar.bz2)

build() {
	cd libdmx-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
