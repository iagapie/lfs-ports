# Depends on:

name=libevdev
version=1.8.0
release=1
source=(https://www.freedesktop.org/software/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
