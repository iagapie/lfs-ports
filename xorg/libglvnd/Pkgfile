# Description:
# URL:
# Maintainer:
# Depends on: xorg-libraries

name=libglvnd
version=1.2.0
release=1
source=(https://github.com/NVIDIA/libglvnd/archive/v$version.tar.gz
	sync_with_khronos.patch
	set_egl_no_x11_macro.patch
	update-gl_h-to-match-mesa.patch)

build() {
	cd libglvnd-$version

	for p in $SRC/*.patch
		do patch -Np1 -i $p
	done

	autoreconf -fi
	./autogen.sh
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
