# Description:
# URL:
# Maintainer:
# Depends on: libx11 xauth xmodmap xrdb util-macros

name=xinit
version=1.4.1
release=1
source=(http://ftp.x.org/pub/individual/app/xinit-$version.tar.bz2)

build() {
	cd $name-$version

	sed -e '/$serverargs $vtarg/ s/serverargs/: #&/' \
	    -i startx.cpp

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--with-xinitdir=/etc/X11/app-defaults
	make
	make DESTDIR=$PKG install
}
