# Description:
# URL:
# Maintainer:
# Depends on: fontconfig fribidi glib cairo gobject-introspection

name=pango
version=1.44.7
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/pango/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson \
	--prefix=/usr \
	--sysconfdir=/etc \
	--libexecdir=/usr/lib/$name \
	..
	ninja
	DESTDIR=$PKG ninja install
}
