# Description:
# URL:
# Maintainer:
# Depends on: libinput xorg-server

name=xf86-input-libinput
version=0.29.0
release=1
source=(ftp://ftp.x.org/pub/individual/driver/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
				--sysconfdir=/etc \
				--localstatedir=/var \
				--disable-static
	make
	make DESTDIR=$PKG install
}
