# Description:
# URL:
# Maintainer:
# Depends on: xorgproto util-macros

name=libxdmcp
version=1.1.3
release=1
source=(http://ftp.x.org/pub/individual/lib/libXdmcp-$version.tar.bz2)

build() {
	cd libXdmcp-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share
}
