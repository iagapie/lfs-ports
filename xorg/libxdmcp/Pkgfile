# Description:
# URL:
# Maintainer:
# Depends on: xorgproto

name=libxdmcp
version=1.1.3
release=1
source=(ftp://ftp.x.org/pub/individual/lib/libXdmcp-$version.tar.bz2)

build() {
	cd libXdmcp-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
