# Depends on: libpng mesa xbitmaps xcb-util xprop 

name=xrandr
version=1.5.1
release=1
source=(ftp://ftp.x.org/pub/individual/app/xrandr-$version.tar.xz)

build() {
	cd xrandr-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
