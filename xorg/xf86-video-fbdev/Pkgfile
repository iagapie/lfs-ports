# Description:
# URL:
# Maintainer:
# Depends on: xorg-server

name=xf86-video-fbdev
version=0.5.0
release=1
source=(http://ftp.x.org/pub/individual/driver/$name-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i "s%#if XV%#ifdef XV%" ./src/fbdev.c

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
