# Depends on: libpng mesa xbitmaps xcb-util xpr 

name=xprop
version=1.2.4
release=1
source=(ftp://ftp.x.org/pub/individual/app/xprop-$version.tar.bz2)

build() {
	cd xprop-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
