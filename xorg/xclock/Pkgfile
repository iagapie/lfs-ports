# Description:
# URL:
# Maintainer:
# Depends on: libxshmfence

name=xclock
version=1.0.9
release=1
source=(ftp://ftp.x.org/pub/individual/app/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
