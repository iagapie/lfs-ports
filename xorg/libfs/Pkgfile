# Depends on: fontconfig libxcb libxext 

name=libfs
version=1.0.8
release=1
source=(ftp://ftp.x.org/pub/individual/lib/libFS-$version.tar.bz2)

build() {
	cd libFS-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
