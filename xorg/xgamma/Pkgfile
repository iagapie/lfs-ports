# Depends on: libpng mesa xbitmaps xcb-util xev 

name=xgamma
version=1.0.6
release=1
source=(ftp://ftp.x.org/pub/individual/app/xgamma-$version.tar.bz2)

build() {
	cd xgamma-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
