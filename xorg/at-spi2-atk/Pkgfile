# Description:
# URL:
# Maintainer:
# Depends on: at-spi2-core atk

name=at-spi2-atk
version=2.34.1
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build
	
	meson --prefix=/usr --libdir=/usr/lib ..
	ninja
	DESTDIR=$PKG ninja install
}
