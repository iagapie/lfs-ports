# Description:
# URL:
# Maintainer:
# Depends on: gtk3

name=libnotify
version=0.7.8
release=1
source=(https://ftp.gnome.org/pub/gnome/sources/$name/${version::3}/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd    build

	meson --prefix=/usr \
	      -Dgtk_doc=false \
	      -Ddocbook_docs=disabled
	ninja
	DESTDIR=$PKG ninja install
}
