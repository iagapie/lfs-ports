# Description:
# URL:
# Maintainer:
# Depends on: libevdev xorg-server

name=xf86-input-synaptics
version=1.9.1
release=1
source=(ftp://ftp.x.org/pub/individual/driver/$name-$version.tar.bz2
		50-synaptics.conf)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install

	install -Dm 644 $SRC/50-synaptics.conf $PKG/etc/X11/xorg.conf.d/50-synaptics.conf
}
