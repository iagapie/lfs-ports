# Description:
# URL:
# Maintainer:
# Depends on: libffi libxml2

name=wayland
version=1.17.0
release=1
source=(http://wayland.freedesktop.org/releases/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr    \
	            --disable-static \
	            --disable-documentation
	make
	make DESTDIR=$PKG install
}
