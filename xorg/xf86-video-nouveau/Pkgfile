# Description:
# URL:
# Maintainer:
# Depends on: xorg-server

name=xf86-video-nouveau
version=1.0.16
release=1
source=(ftp://ftp.x.org/pub/individual/driver/$name-$version.tar.bz2
		20-nvidia.conf)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install

	install -Dm 644 $SRC/20-nvidia.conf $PKG/etc/X11/xorg.conf.d/20-nvidia.conf
}
