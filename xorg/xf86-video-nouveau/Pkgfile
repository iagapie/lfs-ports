# Description:
# URL:
# Maintainer:
# Depends on: xorg-server libdrm

name=xf86-video-nouveau
version=1.0.16
release=1
source=(https://www.x.org/pub/individual/driver/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}
