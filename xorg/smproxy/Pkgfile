name=smproxy
version=1.0.6
release=1
source=(ftp://ftp.x.org/pub/individual/app/smproxy-$version.tar.bz2)

build() {
	cd smproxy-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
