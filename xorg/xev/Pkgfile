name=xev
version=1.2.3
release=1
source=(ftp://ftp.x.org/pub/individual/app/xev-$version.tar.bz2)

build() {
	cd xev-$version
    
    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
