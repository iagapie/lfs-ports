# Description:
# URL:
# Maintainer:
# Depends on: cairo gdk-pixbuf glu mesa pango wayland

name=cogl
version=1.22.4
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/cogl/1.22/cogl-$version.tar.xz
		wayland_buffer.patch)

build() {
	cd $name-$version

	patch -Np1 -i ../wayland_buffer.patch

	./configure --prefix=/usr --enable-gles1 --enable-gles2 \
		--enable-{kms,wayland,xlib}-egl-platform \
		--enable-wayland-egl-server
	make -j1
	make -j1 DESTDIR=$PKG install
}
