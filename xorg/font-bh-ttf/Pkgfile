name=font-bh-ttf
version=1.0.3
release=1
source=(ftp://ftp.x.org/pub/individual/lib/font-bh-ttf-$version.tar.bz2)

build() {
	cd font-bh-ttf-$version

    ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static
    make
	make DESTDIR=$PKG install
}
