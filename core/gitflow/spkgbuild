# description	: gitflow
# maintainer	: iagapie, igoragapie at gmail.com
# depends	    : git

name=gitflow
version=0.4.1
release=1
source="https://github.com/nvie/gitflow/archive/$version.tar.gz"

build() {
	cd $name-$version
	
	git submodule init
	git submodule update
	
	make prefix=$PKG/usr/local install
}
