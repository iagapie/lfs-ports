# description	: -
# maintainer	: iagapie, igoragapie at gmail.com

name=gzip
version=1.10
release=1
source="http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure --prefix=/usr
    make
    make DESTDIR=$PKG install

	mkdir -p $PKG/bin
    mv -v $PKG/usr/bin/gzip $PKG/bin
}
