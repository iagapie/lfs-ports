# Depends on:

name=elfutils
version=0.177
release=1
source=(https://sourceware.org/ftp/$name/$version/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr
    make
    make -C libelf DESTDIR=$PKG install
    
    mkdir -p $PKG/usr/lib/pkgconfig
    install -vm644 config/libelf.pc $PKG/usr/lib/pkgconfig
}
