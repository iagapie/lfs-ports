# Description:
# URL:
# Maintainer:
# Depends on:

name=openssl
version=1.1.1d
release=1
source=(https://www.openssl.org/source/$name-$version.tar.gz)

build() {
	cd $name-$version

	./config --prefix=/usr         \
         --openssldir=/etc/ssl \
         --libdir=lib          \
         shared                \
         zlib-dynamic
	make
	sed -i '/INSTALL_LIBS/s/libcrypto.a libssl.a//' Makefile
	make MANSUFFIX=ssl DESTDIR=$PKG install
}
