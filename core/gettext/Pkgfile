name=gettext
version=0.20.1
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr    \
            --disable-static
    make
    make DESTDIR=$PKG install
    chmod -v 0755 $PKG/usr/lib/preloadable_libintl.so
}
