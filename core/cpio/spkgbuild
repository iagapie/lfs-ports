# maintainer	: iagapie, igoragapie at gmail.com

name=cpio
version=2.13
release=1
source="ftp://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure --prefix=/usr \
            --bindir=/bin \
            --enable-mt   \
            --with-rmt=/usr/libexec/rmt
    make
    make DESTDIR=$PKG install
}
