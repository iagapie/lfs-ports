# description	: -
# maintainer	: iagapie, igoragapie at gmail.com

name=gdbm
version=1.18.1
release=1
source="http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr    \
            --disable-static \
            --enable-libgdbm-compat
    
    make
    make DESTDIR=$PKG install
}
