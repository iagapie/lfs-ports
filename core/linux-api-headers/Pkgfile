# Description:
# URL:
# Maintainer:
# Depends on:

name=linux-api-headers
version=5.3.8
release=1
source=(https://www.kernel.org/pub/linux/kernel/v5.x/linux-$version.tar.xz)

build() {
	cd $name-$version

	make mrproper
	make headers
	
	find usr/include -name '.*' -delete
	rm usr/include/Makefile

	mkdir -p $PKG/usr/include
	cp -rv usr/include/* $PKG/usr/include
}
